{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "originDomain": {
      "type": "string",
      "defaultValue": "http://tmutton.uk",
      "metadata": {
        "description": "Defines an origin domain to be used for Cross-Origin Resource Sharing (CORS)"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "defaultValue": "Free",
      "metadata": {
        "description": "The pricing tier for the hosting plan."
      }
    }
  },
  "variables": {
    "AppServicePlanName": "[concat('AppServicePlan', uniqueString(resourceGroup().id))]",
    "StorageAccountName": "[concat('storage', uniqueString(resourceGroup().id))]",
    "FunctionName": "[concat('Function', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "name": "[variables('StorageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-12-01",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "tags": {
        "displayName": "Storage"
      },
      "kind": "Storage"
    },
    {
      "name": "[variables('AppServicePlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-04-01",
      "tags": {
        "displayName": "AppServicePlan"
      },
      "properties": {
        "name": "[variables('AppServicePlanName')]",
        "sku": "[parameters('sku')]",
        "workerSize": "Small",
        "hostingEnvironment": "",
        "numberOfWorkers": 1
      },
      "kind": "functionapp"
    },
    {
      "name": "[variables('FunctionName')]",
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-04-01",
      "properties": {
        "name": "[variables('FunctionName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
        "siteConfig": {
          "cors": {
            "allowedOrigins": [
              "*"
            ]
          }
        }
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "properties": {
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "FUNCTIONS_EXTENSION_VERSION": "~1",
            "StorageConnection": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "Project": "AzContactForm.FunctionApp"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', variables('FunctionName'))]"
          ]
        },
        {
          "name": "web",
          "type": "sourcecontrols",
          "apiVersion": "2015-08-01",
          "properties": {
            "RepoUrl": "https://github.com/tmutton/AzContactForm.git",
            "branch": "develop",
            "IsManualIntegration": true
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', variables('FunctionName'))]"
          ]
        }
      ],
      "tags": {
        "displayName": "AzContactFormFunction"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
      ]
    }
  ],
  "outputs": {}
}
